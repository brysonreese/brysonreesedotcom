---
const { company, title, description } = Astro.props;
---

<section class="py-12">
  <div class="space-y-6">
    <div class="bg-white p-6 rounded-3xl shadow-xl hover:shadow-2xl transition-shadow duration-300">
      <h3 class="text-xl font-bold">{company}</h3>
      <p class="text-gray-600">{title}</p>
      {
        Array.isArray(description) ? (
          <ul class="list-disc list-inside text-gray-600 text-sm mt-2">
            {description.map(item => <li>{item}</li>)}
          </ul>
        ) : (
          <p class="text-gray-600 text-sm mt-2">{description}</p>
        )
      }
    </div>
  </div>