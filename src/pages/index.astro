---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import WorkCard from "../components/WorkCard.astro";
import { Image } from 'astro:assets';
import headshot from '../assets/headshot_square_low_res.jpg';

const projects = [
  { title: "Friday Countdown", description: "A countdown timer to help you get through the week. Inspirational videos featured every Friday.", link: "https://friday.barflab.com", image: "/app.png" },
];

const workHistory = [
  {
    company: "IGT",
    title: "Software Engineer",
    startDate: "July 2025",
      description: [
        "Design, develop, and maintain internal software solutions and web resources using VB.Net, C#, Angular, and vanilla JS in Agile environments, including modernization efforts with Ionic Framework",
        "Build and support internal data pipelines and databases to streamline business operations and improve data accessibility",
        "Enhance flagship internal applications by implementing user feedback, expanding REST API endpoints for external customer use, and integrating improvements with Electron and Ionic/Angular",
        "Prototype and document future tech transitions, including Flutter/Dart proof-of-concepts to support long-term migration strategies"
      ]
  },
  {
    company: "IGT",
    title: "Desktop Systems Specialist II",
    startDate: "May 2023",
    endDate: "July 2025",
        description: [
          "Provide Tier 2 IT support to 1500+ clients, on-site and remote, while simultaneously supporting on-site business-critical product manufacturing line",
          "Create internal software to automate repeated or complex tasks, such as device reimaging, autopilot enrollment, driver installation, retrieving print server configuration",
          "Operated as point of escalation for Tier 1 Service Desk and Level 1/2 team members both domestic and international"
        ]
  }
];
---
<Layout 
  title="Home"
  description="Bryson Reese is a professional Software Engineer. Explore featured projects, work history, and professional background."
>
  <!-- Hero -->
  <section class="text-center py-16">
    <Image src={headshot} alt="Bryson Reese" class="w-48 h-48 rounded-full mx-auto mb-4 border-4 border-white shadow-lg" />
    <h1 class="text-4xl font-bold mb-4">Bryson Reese</h1>
    <p class="text-gray-600 text-xl mb-6">Software Engineer</p>
    <div class="flex justify-center space-x-6 mb-4">
      <a href="mailto:bryson@brysonreese.com" aria-label="Email">
        <svg class="w-7 h-7 text-gray-700 hover:text-blue-600 transition-colors" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
        </svg>
      </a>
      <a href="https://github.com/brysonreese" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
        <svg class="w-7 h-7 text-gray-700 hover:text-blue-600 transition-colors" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C6.477 2 2 6.484 2 12.021c0 4.426 2.865 8.184 6.839 9.504.5.092.682-.217.682-.483 0-.237-.009-.868-.014-1.703-2.782.605-3.369-1.342-3.369-1.342-.454-1.157-1.11-1.465-1.11-1.465-.908-.62.069-.608.069-.608 1.004.07 1.532 1.032 1.532 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.339-2.221-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.025A9.564 9.564 0 0 1 12 6.844c.85.004 1.705.115 2.504.337 1.909-1.295 2.748-1.025 2.748-1.025.546 1.378.202 2.397.1 2.65.64.7 1.028 1.595 1.028 2.688 0 3.847-2.337 4.695-4.566 4.944.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.749 0 .268.18.58.688.482C19.138 20.2 22 16.447 22 12.021 22 6.484 17.523 2 12 2z"/>
        </svg>
      </a>
      <a href="https://linkedin.com/in/bryson-reese" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
        <svg class="w-7 h-7 text-gray-700 hover:text-blue-600 transition-colors" fill="currentColor" viewBox="0 0 24 24">
          <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.761 0 5-2.239 5-5v-14c0-2.761-2.239-5-5-5zm-11 19h-3v-10h3v10zm-1.5-11.268c-.966 0-1.75-.784-1.75-1.75s.784-1.75 1.75-1.75 1.75.784 1.75 1.75-.784 1.75-1.75 1.75zm13.5 11.268h-3v-5.604c0-1.337-.025-3.063-1.868-3.063-1.868 0-2.154 1.459-2.154 2.967v5.7h-3v-10h2.881v1.367h.041c.401-.761 1.381-1.563 2.841-1.563 3.039 0 3.6 2.001 3.6 4.601v5.595z"/>
        </svg>
      </a>
    </div>
  </section>

  <!-- Projects Showcase -->
  <section class="py-12">
    <h2 class="text-2xl font-semibold mb-6">Featured Projects</h2>
    <div class="grid md:grid-cols-3 gap-6">
      {projects.map(p => <ProjectCard {...p} />)}
    </div>
  </section>

  <!-- Work History -->
  <section class="py-12">
    <h2 class="text-2xl font-semibold mb-6">Work History</h2>
    <div class="space-y-6">
      {workHistory.map(w => <WorkCard {...w} />)}
    </div>
  </section>
</Layout>
